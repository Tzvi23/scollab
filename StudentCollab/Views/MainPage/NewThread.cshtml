@model StudentCollab.Models.User
    @using StudentCollab.Models

@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
    Syear year = (Syear)TempData["year"];
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
</head>
<body>
    <!-- start header -->
    <div id="wrapper">
        <div id="header">
            <div id="logo" style="flex">
                <h1><a href="#">StudyCollab</a></h1>
                <p><a href="#">Learn from the best</a></p>
            </div>
        </div>
        <!-- end header -->
        <!-- star menu -->
        <div id="menu">
            <ul>
                <li class="current_page_item"><a href="@Url.Action("MainPage","MainPage",ViewData["CurrentUser"])">Home</a></li>
                <li><a href="#">Upload now</a></li>
                <li><a href="#">Recent followers upload</a></li>
                <li><a href="#">My profile</a></li>
                <li><a href="#">User Logged: @Model.UserName</a></li>
                @if (Model.rank == 0)
                {
                    <li><a href="#">Admin Page</a></li>
                }
                @if (!Model.UserName.Equals("None"))
                {
                    <li><a href="@Url.Action("logout","MainPage")">log out</a></li>
                }
            </ul>
        </div>
        <!-- end menu -->
        <!-- start page -->
        <div id="page">
            <!-- start content -->
            <div id="content">
                <form action="@Url.Action("CreateNewThread","MainPage",year)" method="post">
                    <table class="table table-bordered" style="width:100%">
                        <tr>
                            <td>Select Thread Type:</td>
                            <td>
                                <select class="form-control" id="threadType" name="threadType">
                                    <option>Select Type</option>
                                    <option>[Question] </option>
                                    <option>[Publication] </option>
                                    <option>[Request] </option>
                                    <option>[Exam] </option>
                                </select>
                            </td>

                        </tr>
                        <tr>
                            <td>Thread Name: </td>
                            <td><input type="text" name="threadName" value="Thread Name" /></td>
                        </tr>
                        <tr>
                            <td>Content: </td>
                            <td><textarea rows="4" cols="50" name="contentArea" value="Enter Content"></textarea></td>
                        </tr>
                        <tr>
                            <td>Union Students only? </td>
                            <td><input type="text" name="union" value="Y/N" /></td>
                        </tr>
                    </table>
                    <input type="submit" value="Create New Thread" />
                </form>


            </div>
            
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div id="footer">
            <p class="legal">
                &copy;2019 Sce-Group11. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by <a href="#">Team_11</a>
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by <a href="#">real_photos</a>.
            </p>
            <!-- end footer -->
        </div>
    </div>
</body>
</html>



@model StudentCollab.Models.User
    @using StudentCollab.Models

@{
    ViewBag.Title = "MainPage";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
</head>
<body>
    <!-- start header -->
    <div id="wrapper">
        <div id="header">
            <div id="logo" style="flex">
                <h1><a href="#">StudyCollab</a></h1>
                <p><a href="#">Learn from the best</a></p>
            </div>
        </div>
        <!-- end header -->
        <!-- star menu -->
        <div id="menu">
            <ul>
                <li class="current_page_item"><a href="@Url.Action("MainPage","MainPage",Model)">Home</a></li>
                <li class="current_page_item"><a href="@Url.Action("UploadFile","MainPage",Model)">Upload now</a></li>
                <li><a href="@Url.Action("MyProfile","MainPage",Model)">My profile</a></li>
                <li><a href="#">User Logged: @Model.UserName</a></li>
                <li><a href="@Url.Action("InboxPage","Communication",Model)">Inbox</a></li>
                @if (Model.rank == 1)
                {
                    <li><a href="@Url.Action("ManagerPage","MainPage")">Manager Page</a></li>
                }
                @if (Model.rank == 0)
                {
                    <li><a href="@Url.Action("AdminPage","MainPage")">Admin Page</a></li>
                }
                @if (Model.studentUnionRank.Equals(2))//    Rank ==>  2 - can accept new , 1 - in the student union, 0 - everybody else
                {
                    <li><a href="@Url.Action("UnionPage","MainPage",Model)">Students union</a></li>
                }
                @if (!Model.UserName.Equals("None"))
                {
                    <li><a href="@Url.Action("logout","MainPage")">log out</a></li>
                }
            </ul>
        </div>
        <!-- end menu -->
        <!-- start page -->
        <div id="page">
            <!-- start <b>ads</b> -->
            <div id="<b>ads</b>"><a href="#"><img src="~/images/ad160x600.gif" alt="" width="160" height="600" /></a></div>
            <!-- end <b>ads</b> -->
            <!-- start content -->
            <div id="content">
                <table>
                    <tr><td>
                        @foreach (Institution inst in ViewBag.InstutionsDB)
                        {
                            <i>
                                <div class="title">
                                    <h2><a href="@Url.Action("DepartmentsPage","MainPage",inst)">@inst.InstName</a></h2>
                                </div>
                                <div class="entry">
                                    <p>
                                        <img src="@Url.Content("~/Content/MainPage_Template/images/" + inst.InstName + ".jpg")" alt="" width="120" height="120" class="left" />
                                    </p>
                                </div>
                            </i>
                        }
                    </td></tr>
                </table>
            </div>
        </div>
        <div id="footer">
            <p class="legal">
                &copy;2019 Sce-Group11. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by <a href="#">Team_11</a>
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by <a href="#">real_photos</a>.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by <a href="@Url.Action("AgreemantPage","MainPage")">Agreemant Page</a>.

            </p>
            <!-- end footer -->
        </div>
    </div>
</body>
</html>



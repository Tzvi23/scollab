@model StudentCollab.Models.User

@{
    ViewBag.Title = "EmailConfirm";
    Layout = "~/Views/Shared/_LoginTemplate.cshtml";
}
<html>
<head>
    @TempData["Email"] = @Model.Email;
</head>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('@Url.Content("~/Content/Login_Template/")images/img-01.jpg');">
            <div class="wrap-login100 p-t-190 p-b-30">
                <form class="login100-form validate-form" action="~/Login/EmailConfirm" method="post">
                    <div class="login100-form-avatar">
                        <img src="@Url.Content("~/Content/Login_Template/")images/miron.jpeg" alt="AVATAR">
                    </div>

                    <span class= ="login100-form-title p-t-20 p-b-45">
                        Hellow @Model.UserName
                        Wellcome to StudyCollab
                        for activate your account, please check your mail box and copy the confimation code.
                    </span>

                    <div class="wrap-input100 validate-input m-b-10" data-validate="Enter your code">
                        <input class="input100" type="text" name="Ccode" placeholder="#######">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn p-t-10">
                        <button class="login100-form-btn" type="submit">
                            Submit
                        </button>
                    </div>

                    <div class="text-center w-full p-t-25 p-b-230">
                        <a href="#" class="txt1">
                            Forgot Username / Password?
                        </a>
                    </div>

                    <div class="text-center w-full">
                        <a class="txt1" href="~/Login/Signup">
                            Create new account
                            <i class="fa fa-long-arrow-right"></i>
                        </a>
                    </div>

                    <div class="text-center w-full">
                        <a class="txt1" href="~/Login/Login">
                            Login page
                            <i class="fa fa-long-arrow-right"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


</body>
</html>
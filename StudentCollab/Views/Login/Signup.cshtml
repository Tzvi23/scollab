@model StudentCollab.Models.User
@{
    Layout = "~/Views/Shared/_SignupTemplate.cshtml";
}

<!-- main -->
<div class="main-w3layouts wrapper">
    <h1>Sign up</h1>
    <div class="main-agileinfo">
        <div class="agileits-top">
            <form action="~/Login/SignupCont" method="post">
                <input class="text" type="text" name="Username" placeholder="Username" required="">
                <input class="text email" type="email" name="email" placeholder="Email" required="">
                <input class="text" type="password" name="password" placeholder="Password" required="">
                <input class="text w3lpass" type="password" name="passwordConfirm" placeholder="Confirm Password" required="">
                <input class="text" type="text" name="institution" placeholder="Institution">
                <input class="text" type="text" name="year" placeholder="Year">
                <div class="wthree-text">
                    <label class="anim">
                        <input type="checkbox" class="checkbox" required="">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"> </div>
                </div>
                <input type="submit" value="SIGNUP">
            </form>
            <input type="submit" value="Back to Log In page" onclick="location.href='@Url.Action("Login","Login")'">
        </div>
    </div>
    <!-- copyright -->
    <div class="colorlibcopy-agile">
        <p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
    </div>
    <!-- //copyright -->
